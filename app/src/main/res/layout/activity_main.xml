<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/btn_service_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="启动服务"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_service_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="停止服务"
        app:layout_constraintStart_toEndOf="@+id/btn_service_start"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_screen_capture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="屏幕截图"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_service_start" />

    <TextView
        android:id="@+id/recorder_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="00:00:00:00"
        app:layout_constraintStart_toEndOf="@+id/btn_service_start"
        app:layout_constraintTop_toTopOf="@id/btn_screen_capture" />

    <Button
        android:id="@+id/btn_media_recorder_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="开始录屏"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_screen_capture" />

    <Button
        android:id="@+id/btn_media_recorder_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="停止录屏"
        app:layout_constraintStart_toEndOf="@+id/btn_media_recorder_start"
        app:layout_constraintTop_toBottomOf="@+id/btn_screen_capture" />
</androidx.constraintlayout.widget.ConstraintLayout>